<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Tmdb\Client" public="true">
            <argument type="service" id="Tmdb\ApiToken" />
            <argument type="service" id="Tmdb\SymfonyBundle\ClientConfiguration" />
        </service>

        <service id="Tmdb\ApiToken" public="false">
            <argument>%tmdb.api_key%</argument>
        </service>

        <service id="Tmdb\SymfonyBundle\ClientConfiguration" public="false">
            <argument type="service" id="event_dispatcher" />
            <argument>%tmdb.options%</argument>

            <call method="setCacheHandler">
                <argument type="service" id="tmdb.cache_handler" on-invalid="null" />
            </call>
        </service>
    </services>
</container>
